<h4>My Routes</h4>
<p><%= link_to 'New Route', new_route_path, :class => "addlink" %></p>    
<table>
  <tr>
    <th>Name</th>    
    <th>Location</th>
    <th>Url</th>
    <th>Distance (m)</th>  
    <th>Add Result</th>
    <th>View</th>
    <% if check_role('Admin') %> 
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @routes.each do |route| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= route.name.to_s %></td>
    <td><%= route.location %></td>
    <td><%= link_to 'View Route', route.url %></td>
    <td><%= route.distance %></td>   
    <td class="add"><%= link_to 'Log a Run', new_runner_result_path(@runner,:route_id =>route.id ) %></td> 
    <td class="view"><%= link_to 'Show', route %></td>  
    <% if check_role('Admin') %>  
      <td class="edit"><%= link_to 'Edit', edit_route_path(route) %></td>
      <td class="delete"><%= link_to 'Destroy', route, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>