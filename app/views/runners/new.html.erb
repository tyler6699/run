<h1>Sign Up</h1>

<%= form_for @runner do |f| %>
  <% if @runner.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @runner.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>   
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p> 
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p class="button"><%= f.submit 'SignUp', :class => 'savelink' %></p>
<% end %>

